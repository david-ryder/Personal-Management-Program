public class Project1 {
	
	static class Student {
		String name;
		String id;
		double gpa;
		int credit_hours;
	}
	
	static class Faculty {
		String name;
		String id;
		String department;
		String rank;
	}
	
	static class Staff {
		String name;
		String id;
		String department;
		String status;
	}
	
	
	
	final double tuition_per_hour = 236.45;
	final int admin_fee = 52;
	
	
	
	public static void main(String[] args)
	{
		Scanner scnr = new Scanner(System.in);
		
		Student student_1 = new Student();
		Student student_2 = new Student();
		
		Faculty faculty_1 = new Faculty();
		
		Staff staff_1 = new Staff();
		
		switch (menu(scnr)) {
			case 1:
				createFaculty(faculty_1, scnr);
			case 2:
				createStudents(student_1, student_2, scnr);
			case 3:
				
			
		}
	}
	
	public static int menu(Scanner scnr) {
		
		System.out.println("Choose one of the options:\n");
		System.out.println("1 - Enter the information of the faculty");
		System.out.println("2 - Enter the information of the two students");
		System.out.println("3 - Print tuition invoice");
		System.out.println("4 - Print faculty information");
		System.out.println("5 - Enter the information of the staff member");
		System.out.println("6 - Print the information of the staff member");
		System.out.println("7 - Exit program\n");
		
		System.out.print("\tEnter your selection: ");
		
		int response = scnr.nextInt();
		
		return response;
	}
	
	public static void createFaculty(Faculty a, Scanner scnr) {
		
		System.out.print("\nEnter faculty info:\n\n");
		System.out.print("\tName of the faculty: ");
		a.name = scnr.next();
		
		System.out.print("\n\tID: ");
		a.id = scnr.next();
		
		System.out.print("\n\tRank: ");
		a.rank = scnr.next();
		
		System.out.print("\n\n\tFaculty successfully added!");
	}
	
	public static void createStudents(Student a, Student b, Scanner scnr) {
		
		System.out.print("\nEnter student 1 info:\n\n");
		
		System.out.print("\tName of Student: ");
		a.name = scnr.next();
		
		System.out.print("\n\tID: ");
		a.id = scnr.next();
		
		System.out.print("\n\tGpa: ");
		a.gpa = scnr.nextDouble();
		
		System.out.print("\n\tCredit hours: ");
		a.credit_hours = scnr.nextInt();
		
		System.out.print("\nThanks!\n");
		
		System.out.print("\nEnter student 2 info:\n\n");
		
		System.out.print("\tName of Student: ");
		b.name = scnr.next();
		
		System.out.print("\n\tID: ");
		b.id = scnr.next();
		
		System.out.print("\n\tGpa: ");
		b.gpa = scnr.nextDouble();
		
		System.out.print("\n\tCredit hours: ");
		b.credit_hours = scnr.nextInt();
		
		System.out.print("\nThanks!");
		
		return;
	}
}
